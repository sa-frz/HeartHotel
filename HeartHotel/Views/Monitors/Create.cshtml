@model HeartHotel.Models.Monitor

@{
    ViewData["Title"] = "افزودن";
    ViewData["Active"] = "Monitors";
}

<h1>@ViewData["Title"]</h1>

<h4>اطلاعات مانیتور</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">متن</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Icon" class="control-label">جهت</label>
        <input asp-for="Icon" type="hidden" value="-" />
        <select id="Icon1" class="form-select">
            <option value="-">بدون انتخاب</option>
            <option value="up">بالا</option>
            <option value="down">پایین</option>
            <option value="left">چپ</option>
            <option value="right">راست</option>
            <option value="up-left">بالا چپ</option>
            <option value="up-right">بالا راست</option>
            <option value="down-left">پایین چپ</option>
            <option value="down-right">پایین راست</option>
        </select>
        <span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonitorId" class="control-label">شماره مانیتور</label>
        <input asp-for="MonitorId" class="form-control" />
        <span asp-validation-for="MonitorId" class="text-danger"></span>
    </div>
    <div class="form-group d-flex gap-2 mt-2">
        <input type="submit" value="ذخیره" class="btn btn-primary w-100" />
        <a asp-action="Index" class="btn btn-secondary w-100">بازگشت</a>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('#Icon1').on('change', function () {
            $('#Icon').val($('#Icon1').val());
        });
    </script>
}
