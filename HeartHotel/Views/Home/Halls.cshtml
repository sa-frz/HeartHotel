@model IEnumerable<HeartHotel.Models.VenueHall>

@{
    ViewData["Title"] = "سالن‌های برگزاری";
}

<div class="w-100 bg-primary position-absolute end-0 top-0 vh-100 d-flex flex-column justify-content-center align-items-center"
    style="z-index: 1;">
    <img src="/img/HH.png" alt="هتل قلب" draggable="false" style="max-height: 100px;" />
    <div class="text-center mb-3 fs-4 text-white">
        انتخاب سالن‌ها
    </div>

    <div class="d-flex justify-content-center align-items-center gap-3 flex-column">
        @foreach (var hall in Model)
        {
            <a class="lecture-container text-decoration-none text-center w-100" href="/Hall/@hall.Id/@hall.Title">
                <i class="fa fa-door-open fs-1 text-primary"></i>
                <div class="fs-5">@hall.Title</div>
            </a>
        }
    </div>
</div>