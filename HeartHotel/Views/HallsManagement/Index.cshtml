@model PaginatedList<HeartHotel.Models.VenueHall>

@{
    ViewData["Title"] = "مدیریت سالن‌ها";
    ViewData["Active"] = "HallsManagement";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>مدیریت سالن‌ها</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">افزودن</a>
    </p>
</div>

<table class="table table-striped">
    <thead style="white-space: nowrap;">
        <tr>
            <th>
                نام
            </th>
            <th>
                نشانی
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th> *@
            <th>
                عملیات
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Venue.Id)
                </td> *@
                @* <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td> *@
                <td>
                    <div class="d-flex gap-2 justify-content-around align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pen-line text-primary"></i></a> |
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-can text-secondary"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mb-3">
    <div class="btn-group ltr" role="group">
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-k="@ViewBag.K"
            asp-route-pageSize="@ViewBag.pageSize" class="btn btn-outline-primary m-0 @nextDisabled"
            style="border-right: 0;">
            بعد
        </a>
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-k="@ViewBag.K"
            asp-route-pageSize="@ViewBag.pageSize" class="btn btn-outline-primary m-0 @prevDisabled">
            قبل
        </a>
    </div>
</div>