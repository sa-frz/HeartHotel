@model HeartHotel.Models.VenueHall

@{
    ViewData["Title"] = "ویرایش";
    ViewData["Active"] = "HallsManagement";
}

<h1>@ViewData["Title"]</h1>

<h4>اطلاعات سالن</h4>
<hr />


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group d-none">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">عنوان</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">نشانی</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group d-flex gap-2 mt-2">
        <input type="submit" value="ذخیره" class="btn btn-primary w-100" />
        <a asp-action="Index" class="btn btn-secondary w-100">بازگشت</a>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
